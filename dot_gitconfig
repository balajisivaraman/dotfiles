[alias]
    st = status
    ci = commit --verbose
    co = checkout
    di = diff
    dc = diff --cached
    amend = commit --amend
    aa = add --all
    ff = merge --ff-only
    pullff = pull --ff-only
    pullr = pull --rebase
    noff = merge --no-ff
    fa = fetch --all
    pom = push origin master
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1
    head = !git r -1
    h = !git head
    hp = "!. ~/.githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/.githelpers && pretty_git_log"
    la = !git l --all
    ls-files-root = ! git ls-files

[merge]
    conflictstyle = zdiff3

[delta]
    navigate = true
    line-numbers = true
    hyperlinks = true
    tabs = 4
    syntax-theme = Dracula

[delta "dracula"]
    # Dracula theme colors
    minus-style = syntax "#3f2d3d"
    minus-emph-style = syntax "#763842"
    plus-style = syntax "#283b3d"
    plus-emph-style = syntax "#31524a"
    map-styles = "bold purple => syntax #44475a, bold cyan => syntax #44475a"

[diff]
    colorMoved = default

[core]
    pager = delta

[commit]
    gpgsign = false

[credential]
    helper = cache --timeout=3600

[interactive]
    diffFilter = delta --color-only

[remote "origin"]
    prune = true

[remote "upstream"]
    prune = true

[pull]
    ff = only

[push]
    autoSetupRemote = true

[init]
    defaultBranch = main

